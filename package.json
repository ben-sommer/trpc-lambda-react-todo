{
  "name": "trpc-lambda-react-todo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build:client": "bun build -w client",
    "build:server": "bun build -w server",
    "build": "run-s build:server build:client",
    "dev:client": "bun dev -w client",
    "dev:server": "bun dev -w server",
    "dev": "run-p dev:*",
    "start:client": "bun start -w client",
    "start:server": "bun start -w server",
    "start": "run-p start:*",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "start-server-and-test": "^1.12.0",
    "wait-port": "^1.0.1"
  },
  "version": "0.0.1",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
